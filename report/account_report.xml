<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="paperformat_ecosoft" model="report.paperformat">
            <field name="name">Formato Reportes Ecosoft</field>
            <field name="default" eval="True" />
            <field name="format">A5</field> 
            <field name="margin_top">30</field>
            <field name="header_spacing">20</field>                                           
        </record>
        <!-- QWeb Reports -->


        <report 
            id="action_report_trial_balance_ecosoft"
            model="account.balance.report"
            string="Balanza Comprobación Ecosoft"
            report_type="qweb-pdf"
            name="account.report_trialbalance_ecosoft"
            file="account.report_trialbalance_ecosoft"
            />
        <report
            id="action_report_trial_balance_ecosoft_xlsx"
            model="wizard.trial.balance.ecosoft"
            string="Balanza Comprobación Ecosoft"
            report_type="xlsx"
            name="account.report_trialbalance_ecosoft.xlsx"
            file="account.report_trialbalance_ecosoft.xlsx"
            attachment_use="False"
        />

        <record id="action_report_trial_balance_ecosoft" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="paperformat_ecosoft" />
        </record>

        <report 
            id="action_report_general_balance_ecosoft"
            model="account.general.report"
            string="Balance General Ecosoft"
            report_type="qweb-pdf"
            name="account.report_generalbalance_ecosoft"
            file="account.report_generalbalance_ecosoft"
            />

         <report
            id="action_report_general_balance_ecosoft_xlsx"
            model="wizard.general.balance.ecosoft"
            string="Balance General Ecosoft"
            report_type="xlsx"
            name="account.report_generalbalance_ecosoft.xlsx"
            file="account.report_generalbalance_ecosoft.xlsx"
            attachment_use="False"
        />


        <record id="action_report_general_balance_ecosoft" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="paperformat_ecosoft" />
        </record>


        <report 
            id="action_report_results_ecosoft"
            model="account.results.report"
            string="Reporte Resultados Ecosoft"
            report_type="qweb-pdf"            
            name="account.report_results_ecosoft"
            file="account.report_results_ecosoft"
            />

        <report
            id="action_report_results_ecosoft_xlsx"
            model="wizard.results.ecosoft"
            string="Reporte Resultados Ecosoft"
            report_type="xlsx"
            name="account.report_results_ecosoft.xlsx"
            file="account.report_results_ecosoft.xlsx"
            attachment_use="False"
        />
        <record id="action_report_results_ecosoft" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="paperformat_ecosoft" />
        </record>

        <report 
            id="action_report_daily_ecosoft"
            model="account.daily.report"
            string="Libro Diario Ecosoft"
            report_type="qweb-pdf"
            name="account.report_daily_ecosoft"
            file="account.report_daily_ecosoft"
            />


        <report
            id="action_report_daily_ecosoft_xlsx"
            model="wizard.daily.ecosoft"
            string="Libro Diario Ecosoft"
            report_type="xlsx"
            name="account.report_daily_ecosoft.xlsx"
            file="account.report_daily_ecosoft.xlsx"
            attachment_use="False"
        />

        <record id="action_report_daily_ecosoft" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="paperformat_ecosoft" />
        </record>


        <report 
            id="action_report_ledger_ecosoft"
            model="account.ledger.report"
            string="Libro Mayor Ecosoft"
            report_type="qweb-pdf"
            name="account.report_ledger_ecosoft"
            file="account.report_ledger_ecosoft"
            />

        <report
            id="action_report_ledger_ecosoft_xlsx"
            model="wizard.ledger.ecosoft"
            string="Libro Mayor Ecosoft"
            report_type="xlsx"
            name="account.report_ledger_ecosoft.xlsx"
            file="account.report_ledger_ecosoft.xlsx"
            attachment_use="False"
        />

        <record id="action_report_ledger_ecosoft" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="paperformat_ecosoft" />
        </record>
        

        <!-- CSV -->

        <record id="action_csv" model="ir.actions.client">
            <field name="name">Reporte CSV</field> 
            <field name="tag">action_csv</field>
            <field name="context" eval="{'url': '/csv/print/', 'addActiveId': True, 'model': 'account.report'}" />
        </record>
