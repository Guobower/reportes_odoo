<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_trialbalance_ecosoft">
    <t t-call="report.html_container">
        <t t-call="report.internal_layout">
            <div class="page">
                <t t-set="company" t-value="res_company"></t>
                 <table style="width: 100%">                         
                    <tr style="text-align: left;border-bottom:1px dotted #AAAAAA;">
                        <td style="width: 70%">
                            <h2><span t-esc="res_company.name"/></h2>
                        </td>
                        <td>
                            <img t-if="company.logo"
                                    t-att-src="'data:image/png;base64,%s' % company.logo"
                                    style="max-height:90px;" />
                        </td>
                    </tr>
                    <tr style="text-align: center;">
                        <td colspan="2">
                            <h3>Balanza de Comprobación</h3>
                        </td>
                        
                    </tr>                    
                </table>
                
                  <table style="width: 100%">     
                  <tr>
                        <td class="text-left" colspan="2">
                          <h5>
                               Dirección: Industria electrica No. 2 parque industrial
                               
                           </h5>
                        </td>
                   </tr>
                   <tr>     
                         <td class="text-left">
                          <h5> Reg. Frd.: IGU640324RD7</h5>
                        </td>
                        <td class="text-right">
                          <h5> Periodo: <span t-esc="periodo"/></h5>
                        </td>
                   </tr>
                </table>

                <table class="table table-condensed" style="font-size: 10px;">
                    <thead>
                        <tr>
                            <th>Cuenta contable</th>
                            <th>Nombre</th>
                            <th class="text-right">Saldo Ant.</th>
                            <th class="text-right">Cargos</th>
                            <th class="text-right">Abonos</th>
                            <th class="text-right">Saldo Actual</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="Accounts" t-as="account">
                            <td t-if="account['level'] == 1"  style="padding-top:20px;">
                                <span t-att-style="style" t-esc="account['code']"/>
                            </td>
                            <td t-else="" >
                                <span t-att-style="style" t-esc="account['code']"/>
                            </td>
                             <td t-if="account['level'] == 1"  style="padding-top:20px;">
                                <span  t-if="account['level'] == 1" t-esc="''"/>
                                <span t-elif="account['level'] == 2" style="padding-left:1em;" t-esc="''"/>
                                <span t-elif="account['level'] == 3" style="padding-left:2em;" t-esc="''"/>
                                <span t-elif="account['level'] == 4" style="padding-left:3em;" t-esc="''"/>
                                <span t-else="" style="padding-left:4em;" t-esc="''"/>
                                <span t-att-style="style" t-esc="account['name']"/>
                            </td>
                            <td t-else="" >
                                <span  t-if="account['level'] == 1" t-esc="''"/>
                                <span t-elif="account['level'] == 2" style="padding-left:1em;" t-esc="''"/>
                                <span t-elif="account['level'] == 3" style="padding-left:2em;" t-esc="''"/>
                                <span t-elif="account['level'] == 4" style="padding-left:3em;" t-esc="''"/>
                                <span t-else="" style="padding-left:4em;" t-esc="''"/>
                                <span t-att-style="style" t-esc="account['name']"/>
                            </td>
                            
                            <td t-if="account['level'] == 1" class="text-right" style="padding-top:20px;">
                                 <span t-att-style="style" t-esc="account['argil_initial_balance']" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                            </td>
                            <td t-else="" class="text-right">
                                 <span t-att-style="style" t-esc="account['argil_initial_balance']" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                            </td>
                            
                            <td t-if="account['level'] == 1" class="text-right" style="padding-top:20px;">
                                 <span t-att-style="style" t-esc="account['debit']" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                            </td>
                            <td t-else="" class="text-right">
                                 <span t-att-style="style" t-esc="account['debit']" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                            </td>

                             <td t-if="account['level'] == 1" class="text-right" style="padding-top:20px;" >
                                <span t-att-style="style" t-esc="account['credit']" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                            </td>
                            <td t-else="" class="text-right">
                                <span t-att-style="style" t-esc="account['credit']" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                            </td>

                            <td t-if="account['level'] == 1" class="text-right" style="padding-top:20px;">
                                  <span t-att-style="style" t-esc="account['balance']" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                            </td>
                            <td t-else="" class="text-right">
                                <span t-att-style="style" t-esc="account['balance']" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                            </td>

                        </tr>
                        <tr>
                          <td>
                                <span t-att-style="style"><strong>Totales</strong> </span>
                            </td>
                            <td>
                                <span style="color: white;">.....................</span>
                            </td>
                            
                          <td class="text-right"><strong>
                            <span t-att-style="style" t-esc="totales['argil_initial_balance']" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/> </strong>
                          </td>
                          <td class="text-right"><strong>
                            <span t-att-style="style" t-esc="totales['debit']" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/> </strong>
                          </td>
                          <td class="text-right"><strong>
                            <span t-att-style="style" t-esc="totales['credit']" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/></strong>
                          </td>
                          <td class="text-right"><strong>
                            <span t-att-style="style" t-esc="totales['balance']" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/></strong>
                          </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </t>
    </t>
</template>
</odoo>
